div.container
    div.content
        table.table.table-striped
            if sensor == 'Mlx906'
                thead
                    tr
                        th sensor
                        th time
                        th ambiTemp
                        th skyTemp
                tbody
                    each reading, index in readings
                        tr(data-id="#{reading.id}")      
                            td= reading.sensor
                            td #{moment(reading.createdAt).format("YYYY-MM-DD HH:mm")}
                            td= reading.ambiTemp
                            td= reading.skyTemp 
            else if sensor == 'Bmp180'
                thead
                    tr
                        th sensor
                        th time
                        th temp
                        th pressure(Pascal)
                tbody
                    each reading, index in readings
                        tr(data-id="#{reading.id}")      
                            td= reading.sensor
                            td #{moment(reading.createdAt).format("YYYY-MM-DD HH:mm")}
                            td= reading.temp
                            td= reading.pressure
            else if sensor == 'Sht15'
                thead
                    tr
                        th sensor
                        th time
                        th temp
                        th RH%
                tbody
                    each reading, index in readings
                        tr(data-id="#{reading.id}")      
                            td= reading.sensor
                            td #{moment(reading.createdAt).format("YYYY-MM-DD HH:mm")}
                            td= reading.temperature
                            td= reading.rh    
            else if sensor == 'WeatherStation'
                thead
                    tr
                        th corrected_direction
                        th wind_speed(m/s)
                        th temp(ºC)
                        th pressure(Pascal)
                        th precipitation(mm)
                        th RH%
                        th time
                tbody
                    each reading, index in readings
                        tr(data-id="#{reading.id}")      
                            td= reading.corrected_direction
                            td= reading.wind_speed
                            td= reading.temp
                            td= reading.pressure
                            td= reading.precipitation
                            td= reading['rh%']
                            td #{moment(reading.time).format("YYYY-MM-DD HH:mm")}
            else if sensor == 'Hflux'
                thead
                    tr
                        th sensor
                        th time
                        th value(W/m²)
                tbody
                    each reading, index in readings
                        tr(data-id="#{reading.id}")      
                            td= reading.sensor
                            td #{moment(reading.createdAt).format("YYYY-MM-DD HH:mm")}
                            td= reading.val 
            else
                thead
                    tr
                        th sensor
                        th time
                        th value
                tbody
                    each reading, index in readings
                        tr(data-id="#{reading.id}")      
                            td= reading.sensor
                            td #{moment(reading.createdAt).format("YYYY-MM-DD HH:mm")}
                            td= reading.val 
