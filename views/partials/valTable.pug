div.container
    div.content
        table.table.table-striped
            if sensor == 'Mlx906'
                thead
                    tr
                        th sensor
                        th time
                        th ambiTemp
                        th skyTemp
                tbody
                    each reading, index in readings
                        tr(data-id="#{reading.id}")      
                            td= reading.sensor
                            td #{moment(reading.createdAt).format("YYYY-MM-DD HH:mm")}
                            td= reading.ambiTemp
                            td= reading.skyTemp 
            else
                thead
                    tr
                        th sensor
                        th time
                        th value
                tbody
                    each reading, index in readings
                        tr(data-id="#{reading.id}")      
                            td= reading.sensor
                            td #{moment(reading.createdAt).format("YYYY-MM-DD HH:mm")}
                            td= reading.val 