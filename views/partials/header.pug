.navbar.navbar-default.navbar-fixed-top
  .container
    if user
      .navbar-header
        button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='/')
          i.fa.fa-cube
          | Energy monitor
      .collapse.navbar-collapse
        ul.nav.navbar-nav
          li(class=(title == 'Home') ? 'active' : undefined)
            a(href='/') Home
          li(class=(title == 'Register') ? 'active' : undefined)
            a(href='/registerBuilding') Register
          li(class=(title == 'Download') ? 'active' : undefined)
            a(href='/download') Download
          li(class=(title == 'status') ? 'active' : undefined)
            a(href='/charts') Wind speed
        ul.nav.navbar-nav.navbar-right
          li.dropdown(class=(title == 'Account Management') ? 'active' : undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              if user.profile
                if user.profile.picture
                  img(src=user.profile.picture)
                else if user._gravatar
                  img(src=user._gravatar)
                  //- img(src="https://gravatar.com/avatar/520aa623e437b4c20bc09ce193c31fd1?s=60&d=retro")
                span= user.profile.name || user.profile.email || user.email
                i.caret
              else
                if user._gravatar
                  img(src=user._gravatar)
                  //- img(src="https://gravatar.com/avatar/520aa623e437b4c20bc09ce193c31fd1?s=60&d=retro")
                span= user.email
                i.caret
            ul.dropdown-menu
              li
                a(href='/account') My Account
              li.divider
              li
                a(href='/logout') Logout
    else
      .navbar-header
        button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='/')
          i.fa.fa-cube
          | Building Nrg
      .collapse.navbar-collapse
        ul.nav.navbar-nav.navbar-right
          li(class=(title == 'Login') ? 'active' : undefined)
            a(href='/login') Login
          li(class=(title == 'Create Account') ? 'active' : undefined)
            a(href='/signup') Create Account
  
